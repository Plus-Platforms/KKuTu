include module

- if(LANG == undefined) LANG = locals.locale;

doctype html
html
	head
		block Subject
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
		
		script(type='text/javascript').
			function getObject(v, i) {
				Object.defineProperty(v, i, {value: v[i], writable: false});
			}
			getObject(window.WebSocket, "send");
			getObject(window.WebSocket, "onmessage");
			getObject(window, "WebSocket");

		block Search
			meta(name='description', content=LANG['meta_desc'] || L('META_DESC'))
			meta(name='keywords', content=LANG['meta_keys'] || L('META_KEYS'))

		block OpenGraph
			meta(property='og:image', content=locals.ogImage || "http://JJo.kr/img/ogImage.png")
			meta(property='og:url', content=locals.ogURL || "http://JJo.kr/")
			meta(property='og:title', content=locals.ogTitle || "쪼롤 - League of Legends 정보 검색 사이트")
			meta(property='og:description', content=locals.ogDescription || "롤 전적검색은 JJO.KR")

		+PageHead()
			block Preload
		block CSS
		block JS

	body(style='min-width: 640px;')
		div#Loading= L('LOADING')
		div#Intro
			div#intro-top
				img(style="width: 100px", class="light", src="/img/kkutu/intro/infole_logo.svg")
				img(style="width: 100px", class="dark", src="/img/kkutu/intro/infole_logo_dark.svg")
				img(style="height: 64px;", src="/img/kkutu/intro/grac_all.svg")
			div#intro-rc
				img(style="height: 48px", class="light", src="/img/kkutu/intro/kkutu_logo.svg")
				img(style="height: 48px", class="dark", src="/img/kkutu/intro/kkutu_logo_dark.svg")
				div#intro-text= L('LOADING')
				div#version= VERSION
		block Top
		div#Jungle
			span#mobile= locals.mobile
			span#summonerID= DATA._id
			div#Background(style='background: #F1F5F9;')
			block Jungle
		div#Middle
			block Middle
		div#Bottom
			block Bottom
			h4.opt(style='text-align: center;')!= L('dictionarySupport')
			h4.opt(style='text-align: center;')!= L('etcSupport')
			h4.opt(style='text-align: center;')!= L('GPL')
			+separator(100)