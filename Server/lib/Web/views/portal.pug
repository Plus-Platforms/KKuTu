extends layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href='/css/in_game_kkutu.css')

block Jungle
	div(style='float: left; width: calc(100% - 4px); overflow-y: hidden; overflow-x: hidden;')
		iframe#kkutu-bulletin(width='100%', height='500px', src='/kkutu_bulletin.html', style='margin: 0px;')
		
block Middle
	div(style='float: left; width: 100%; margin-top: 35px; ')
		div(style='float: left; padding-left: 70px;')
			img#logo(src='https://cdn.kkutu.cc/img/kkutu/placeholder.png', width="200px", height="100px")
		div.jjoriping(style='margin-top: 40px;')
			img.jjoObj.jjoEyeL(src='https://cdn.kkutu.cc/img/jjoeyeL.png', style='left: -270px;')
			img.jjoObj.jjoNose(src='https://cdn.kkutu.cc/img/jjonose.png', style='left: -170px;')
			img.jjoObj.jjoEyeR(src='https://cdn.kkutu.cc/img/jjoeyeR.png', style='left: -70px;')
			div.jjoDisplayBar(style='width: 325px; height: 85px;')
				button#game-start.jjo-display= L('gameStart')
	div(style='float: right; margin-top: -120px; width: 50%;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list

	+separator(10)

block Bottom